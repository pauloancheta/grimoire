while [[ "done" != "${today}" ]]; do
  today_array+=("â€¢ ${today}")
  echo "What else are you going to do? Type 'done' when you're done :)"
  read -r today
done

echo "Do you have any blockers? ğŸ™…â€â™€ï¸ğŸ™…â€â™‚ï¸"
