today_array=()
blockers_array=()

echo "what did you do yesterday? ğŸ¤“"
read -r yesterday
while [[ "done" != "${yesterday}" ]]; do
  yesterday_array+=("â€¢ ${yesterday}")
  echo "What else did you do? Type 'done' when you're done :)"
  read -r yesterday
done

echo "what are you going to do today? ğŸ˜"
